# DACN Contract Deployment Configuration
# Copy this file to .env and fill in your values

# Your wallet private key (with 0x prefix)
# This wallet will deploy and own the contract
# Get Base Sepolia ETH from: https://www.alchemy.com/faucets/base-sepolia
PRIVATE_KEY=0x...

# RPC Endpoints (optional - defaults provided)
# BASE_SEPOLIA_RPC=https://sepolia.base.org
# BASE_MAINNET_RPC=https://mainnet.base.org

# BaseScan API Key (for contract verification)
# Get one at: https://basescan.org/myapikey
BASESCAN_API_KEY=

# USDC Contract Address (passed to DiemCreditEscrow constructor)
# Base Sepolia: mintable test USDC (use this so you can mint test USDC)
USDC_ADDRESS=0x6ac3ab54dc5019a2e57eccb214337ff5bbd52897

# Base Mainnet USDC (for production)
# USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# Enable forking for local testing (optional)
# ENABLE_FORKING=false
